# Description: Sample .env file for the server
# Usage: Copy this file to .env and replace the values with your own
# Note: In production, the values should be set as environment variables and/or Key Vault secrets
WEBSOCKET_SERVER_API_KEY=your_api_key
WEBSOCKET_SERVER_CLIENT_SECRET=your_secret

AZURE_STORAGE_ACCOUNT_CONTAINER="audio"
AZURE_SPEECH_REGION=""
AZURE_EVENT_HUB_NAME=active_sessions

AZURE_SPEECH_LANGUAGES="en-US,nl-NL"

# Authentication by Managed Identity (recommended)
AZURE_STORAGE_ACCOUNT_URL="https://storageaccountname.blob.core.windows.net/"
AZURE_SPEECH_RESOURCE_ID="/subscriptions/{subscription-id}/resourceGroups/{resource-group}/providers/Microsoft.CognitiveServices/accounts/{speech-service-name}"
AZURE_EVENT_HUB_FULLY_QUALIFIED_NAMESPACE="eventhubname.servicebus.windows.net"
AZURE_COSMOSDB_ENDPOINT=""
SPEECH_PROVIDER="azure-ai-speech"
# Authentication by key
AZURE_STORAGE_CONNECTION_STRING=""
AZURE_SPEECH_KEY=""
AZURE_EVENT_HUB_CONNECTION_STRING=""
AZURE_COSMOSDB_CONNECTION_STRING=""

# Cosmos DB Storage
AZURE_COSMOSDB_DATABASE="audiohook"
AZURE_COSMOSDB_CONTAINER="conversations"

# AOAI
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_KEY=""
AZURE_OPENAI_MODEL_DEPLOYMENT=""
